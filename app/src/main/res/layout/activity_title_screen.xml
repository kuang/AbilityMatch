<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TitleScreen">

    <TextView android:text="Pick a game mode:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:text="TITLES"
        android:id="@+id/title"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#FFFFFF"
        android:background="#00ffffff"
        android:textSize="33dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:text="Passives"
        android:id="@+id/passives"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:textSize="33dp"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:text="Q ABILITES"
        android:id="@+id/q"
        android:layout_below="@+id/passives"
        android:layout_alignLeft="@+id/passives"
        android:layout_alignStart="@+id/passives"
        android:background="#00ffffff"
        android:textSize="33dp"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:text="W ABILITIES"
        android:id="@+id/W"
        android:layout_below="@+id/q"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:textSize="33dp"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:text="E ABILITES"
        android:id="@+id/E"
        android:layout_below="@+id/W"
        android:layout_alignRight="@+id/W"
        android:layout_alignEnd="@+id/W"
        android:background="#00ffffff"
        android:textSize="33dp"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:text="ULTIMATE ABILITES"
        android:id="@+id/ult"
        android:layout_below="@+id/E"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:textSize="33dp"
        android:textColor="#FFFFFF" />

</RelativeLayout>
